<!-- index.erb -->
<ul>
  <% @files.sort.each do |file| %>
    <li>
      <span><a href="/<%= file %>"><%= file %></a></span>
      <span><a href="<%= file %>/edit">Edit</a></span>
      <span>
        <form class="button" action="/<%= file %>/delete" method="post">
          <button type="submit">delete</button>
        </form>
      </span>
    </li>
  <% end %>
</ul>

<a href="/new">New Document</a>

<br /><br />

<% if user? %>
  <form action="/users/signout" method="post">
    <em>Signed in as <%= session['user'] %>.</em>
    <button type="submit">Sign Out</button>
  </form>
<% else %>
  <form action="/users/signin" method="get">
    <button type="submit">Sign In</button>
  </form>
<% end %>
